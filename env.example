# Blizzard API Credentials
BLIZZARD_CLIENT_ID=your_client_id_here
BLIZZARD_CLIENT_SECRET=your_client_secret_here
BLIZZARD_REDIRECT_URI=http://localhost:3000/auth/blizzard/callback

# Server Configuration
PORT=3000
NODE_ENV=production # Options: development, production
POPULATE_ON_START=false

# Admin Authentication
ADMIN_API_KEY=your_secure_admin_api_key_here

# OpenAI API Authentication
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini  # Suggested default for cost-efficiency. Other options: gpt-5, gpt-5-mini, gpt-5-nano, gpt-4o, gpt-4-turbo

# Raider.IO API
RAIDERIO_API_KEY=your_raiderio_api_key_here
# Optional Raider.IO client tuning
# requests per second cap (default 10 â†’ ~600 rpm)
RAIDERIO_MAX_RPS=12
# request timeout ms (default 10000)
RAIDERIO_TIMEOUT_MS=12000
# retry attempts for 429/5xx (default 2)
RAIDERIO_RETRY_MAX=3
# base backoff delay ms (default 500)
RAIDERIO_RETRY_BASE_DELAY_MS=600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 

# CORS Configuration
FRONTEND_URL=https://your-frontend-domain.com
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://another-domain.com

# DB connection
PGHOST=localhost
PGPORT=5432
PGUSER=your_user
PGPASSWORD=your_password
PGDATABASE=wow_leaderboard

# Optional: internal base URL used by startup backfill to call this API itself
# If omitted, defaults to http://localhost:${PORT}
# INTERNAL_API_BASE=https://your-api-domain.example.com